<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/about_us_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/about_us_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_us_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="版本：1.01"
        android:textColor="#535353"
        android:textSize="10sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_us_version"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="30dp"
        android:lineSpacingExtra="4dp"
        android:text="Moment是一款灵感记录分享软件，拥有多种记录方式，包括文字、录音、图片，让你第一时间拿起手机快速记录一闪而过的灵感。同时，你也可以将你的灵感公开出去，让更多人看到，搜集别人的意见，完善自己的灵感。另外，你也可以发现和查看其他人的精彩灵感"
        android:textColor="#535353"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/about_us_email"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:text="华中科技大学Moment团队"
        android:textColor="#959595"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/about_us_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="hust_lh@163.com"
        android:textColor="#959595"
        android:textSize="12sp" />

</RelativeLayout>
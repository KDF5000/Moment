<?xml version="1.0" encoding="utf-8"?>
<com.ktl.moment.android.component.ResizeLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/msg_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#eeeeee"
        android:divider="#0000"
        android:dividerHeight="16dp"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none" >
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#f7f7f7"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/editor_keyboard_unable" />

        <EditText
            android:id="@+id/msg_input_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/msg_input_et_bg"
            android:lineSpacingExtra="3dp"
            android:maxLines="5"
            android:paddingBottom="3.5dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="6.5dp"
            android:textColor="#000000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/msg_send_btn"
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/msg_send_btn_unable"
            android:text="发送"
            android:textColor="#bfbfbf"
            android:textSize="12sp" />
    </LinearLayout>

</com.ktl.moment.android.component.ResizeLinearLayout>
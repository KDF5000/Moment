<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/verify_layout"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_marginTop="18dp"
	android:layout_marginLeft="12dp"
	android:layout_marginRight="12dp"
	android:layout_marginBottom="30dp"
	android:background="@drawable/login_card"
	android:gravity="center_horizontal"
	android:orientation="vertical">
	
	<LinearLayout
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_marginTop="26dp"
	android:layout_marginLeft="56dp"
	android:layout_marginRight="56dp"
	android:layout_marginBottom="40dp"
	android:gravity="center_horizontal"
	android:orientation="vertical" >
        
    <TextView
        android:id="@+id/verify_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/verify"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/verify_account_layout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="33.3dp"
        android:orientation="horizontal" >
        
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:contentDescription="@string/account_des"
            android:src="@drawable/verify_key"/>

        <EditText
            android:id="@+id/verify_code_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:background="#0000"
            android:gravity="left|center"
            android:hint="@string/verify_hint"
            android:inputType="number"
            android:maxLength="6"
            android:singleLine="true"
            android:textColor="@color/account_text_color"
            android:textColorHint="@color/account_hint_color"
            android:textSize="@dimen/account_text_size" >

            <requestFocus />
        </EditText>

        <Button 
            android:id="@+id/verify_resend_btn"
            android:layout_width="60dp"
            android:layout_height="23dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/verify_resend_btn_on_finish_shape"
            android:text="@string/verify_resend"
            android:textSize="13sp"
            android:textColor="@color/verify_resend_on_finish_text_color"/>

    </LinearLayout>
		
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.66dp"
        android:background="#959595" />

    <Button
        android:id="@+id/verify_next_btn"
        android:layout_width="match_parent"
        android:layout_height="46.7dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/login_button_shape"
        android:text="@string/register_next"
        android:textColor="@color/white"
        android:textSize="20sp" />
    
    </LinearLayout>
    
   	<LinearLayout
   	    android:id="@+id/verify_to_register"
   	    android:layout_width="match_parent"
   	    android:layout_height="wrap_content"
   	    android:gravity="center"
   	    android:layout_marginTop="290dp">
   	    
   	    <TextView 
   	        android:layout_width="wrap_content"
   	        android:layout_height="wrap_content"
   	        android:text="@string/verify_to_register"
   	        android:textColor="@color/white"
   	        android:textSize="18sp"/>
   	</LinearLayout>
        
</LinearLayout>
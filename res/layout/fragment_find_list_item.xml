<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
          	  android:padding="15dp"
              android:background="@drawable/find_idea_show_shape"
        >
    <TextView
        	android:id="@+id/moment_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="一款灵感记录类应用"
            android:textSize="18sp"
            android:textColor="#000000"/>
    <TextView
        	android:id="@+id/moment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            android:text="这是一款专门记录灵感的软件,用户可以通过文字，图片，声音等多种形式记录灵感"/>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
        <com.ktl.moment.android.component.CircleImageView
                android:id="@+id/user_avatar"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/avatar"/>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@id/user_avatar"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="4dp">
            <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/user_avatar"
                    android:text="习大大"/>
            <TextView
                    android:id="@+id/post_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2小时前"
                    android:textSize="10sp"
                    />
        </LinearLayout>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:paddingTop="15dp">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注"/>
            <TextView
                    android:id="@+id/follow_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12345"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="点赞"/>
            <TextView
                    android:id="@+id/praise_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12345"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/user_info_bg" >

    <ImageView
        android:id="@+id/user_info_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="7.5dp"
        android:src="@drawable/title_return_white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="140dp"
        android:orientation="vertical" >

        <com.ktl.moment.android.component.CircleImageView
            android:id="@+id/user_info_avatar"
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/default_img" />

        <LinearLayout
            android:id="@+id/user_page_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/user_info_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hust"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/user_info_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:src="@drawable/female" />
        </LinearLayout>

        <TextView
            android:id="@+id/user_info_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="文艺好少年"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp"
                android:src="@drawable/user_info_place" />

            <TextView
                android:id="@+id/user_info_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="湖北 武汉"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生日："
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/user_info_birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2005-9-03"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>